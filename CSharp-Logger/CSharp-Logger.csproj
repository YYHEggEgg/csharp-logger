<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <RootNamespace>YYHEggEgg.Logger</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GenerateDocumentationFile>False</GenerateDocumentationFile>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>EggEgg.CSharp-Logger</Title>
    <Version>2.2.2</Version>
    <Authors>YYHEggEgg</Authors>
    <Company>YYHEggEgg</Company>
    <Description>A easy logger that supports log and command-line input.</Description>
    <Copyright>Copyright (c) 2023 EggEgg</Copyright>
    <PackageProjectUrl>https://github.com/YYHEggEgg/csharp-logger</PackageProjectUrl>
    <RepositoryUrl>https://github.com/YYHEggEgg/csharp-logger</RepositoryUrl>
    <PackageTags>Log CommandLine</PackageTags>
    <PackageReleaseNotes>
		Changes in v2.2.2
		- Have some bugfix about auto compress logs. 
    - Added `debug_LogWriter_AutoFlush` config paramter.
      Though it's recommended to set it to true, the default value is false because of compatiable reasons.
      For now, the unflushed parts of the log will be lost. More optimization will come in further versions. 
	</PackageReleaseNotes>
    <IncludeSymbols>False</IncludeSymbols>
    <PackageId>EggEgg.$(AssemblyName)</PackageId>
    <Product>EggEgg.$(AssemblyName)</Product>
    <PackageReadmeFile>README.md</PackageReadmeFile>
	<PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

	<ItemGroup>
		<Compile Update="Properties\Resources.Designer.cs">
			<DesignTime>True</DesignTime>
			<AutoGen>True</AutoGen>
			<DependentUpon>Resources.resx</DependentUpon>
		</Compile>
	</ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

</Project>
